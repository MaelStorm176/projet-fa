FROM php:8.0.13-apache

RUN a2enmod rewrite

RUN apt-get update \
  && apt-get install -y libzip-dev git wget make npm --no-install-recommends \
  && apt-get clean \
  && rm -rf /var/lib/apt/lists/* /tmp/* /var/tmp/*

RUN docker-php-ext-install pdo mysqli pdo_mysql zip;

COPY php/vhosts/vhosts.conf /etc/apache2/sites-enabled/000-default.conf
COPY php/scripts/entrypoint.sh /entrypoint.sh

WORKDIR /var/www

RUN chmod -R 777 ../../var
RUN chmod +x /entrypoint.sh

CMD ["apache2-foreground"]

ENTRYPOINT ["/entrypoint.sh"]