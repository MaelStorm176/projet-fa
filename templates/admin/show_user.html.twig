{% extends "base.html.twig" %}

{% block body %}

<div class="container mt-5">
    <div class="row">
        <div class="col">
            <button class="btn btn-secondary">Bouton test</button>

            <table id="myTable" class="table table-striped table-bordered" style="width:100%">
                <thead>
                    <tr>
                        <th>Mail</th>
                        <th>Role</th>
                        <th>Give role chief</th>
                    </tr>
                </thead>
                <tbody>
                    {% for users in user %}
                        <tr>
                            <td>{{users.email}}</td>
                            <td>{{users.roles[0]}}</td>
                            <td><a href="/role/{{users.id}}">Give Role Chief</a></td>
                        </tr>
                    {% endfor %}
                </tbody>
            </table>
        </div>
    </div>
</div>

{% block javascripts %}
    {{ parent() }}
    {{ encore_entry_script_tags('show_user') }}
{% endblock %}

{% endblock %}