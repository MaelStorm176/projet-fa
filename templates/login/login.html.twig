<!-- Login -->

<form class="login_form" action="{{ path('login') }}" method="post">
        <div class="">
                <label for="username">Email:</label>
                <input type="text" id="username" placeholder="name@example.com" name="_username" value="{{ last_username }}"/>
        </div>
        <div class="">
                <label for="password">Password :</label>
                <input type="password" id="password" name="_password"/>
        </div>
        <div class="">
                {# If you want to control the URL the user is redirected to on success #}
                {# <input type="hidden" name="_target_path" value="/account"/>  #}
                <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">
                <button type="submit">login</button>
        </div>
        <div class="">
                <span> Vous avez déjà un compte ?</span>
                <button type="submit" href="/register">Se Créer un compte</button>
        </div>
</form>
